<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		">
		
		<!-- Annotations config style declaration -->
		<context:annotation-config/>		
		<context:component-scan base-package="org.koushik.javabrains"/>
	
		<!-- RMB + 'Copy Qualified Name' on 
		Project Explorer - %PROJECT% - Maven Dependencies
		 - spring-jdbc-... - ...jdbc.datasource - DriverManagerDataSource.class -->   
		<bean id="dataSource"
		      class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		      <!-- we use client driver from Derby client dependency -->
		      <property name="driverClassName" value="org.apache.derby.jdbc.ClientDriver"/>
		      <!-- we use server, configured on our system with existed db -->
		      <property name="url" value="jdbc:derby://localhost:1527/db;create=true"/>
	    </bean>	
	
</beans>



